<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<property name="connection.username">root</property>
    	<property name="connection.password">6482</property>
    	<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    	<property name="connection.url">jdbc:mysql://127.0.0.1:3306/shopping?useUnicode=true&amp;characterEncoding=UTF-8</property>
    	<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
   		<property name="show_sql">true</property>
   		<property name="format_sql">true</property>
   		<property name="hbm2ddl.auto">update</property>
   		<mapping resource="items.hbm.xml"/>
   		<mapping resource="itemsclass.hbm.xml"/>
   		<mapping resource="order.hbm.xml"/>
   		<mapping resource="orderlist.hbm.xml"/>
   		<mapping resource="admin.hbm.xml"/>
   		<mapping resource="user.hbm.xml"/>
   		<mapping resource="leavelanguage.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
